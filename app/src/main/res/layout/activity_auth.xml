<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg">
    
    <!-- Animated Background -->
    <View
        android:id="@+id/animatedBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background" />
    
    <!-- Glow Overlay -->
    <View
        android:id="@+id/glowOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/glow_overlay"
        android:alpha="0.3" />
    
    <!-- Particles View -->
    <View
        android:id="@+id/particlesView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5" />
    
    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">
            
            <!-- App Logo/Title -->
            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/ic_security"
                android:tint="@color/purple_500"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/app_name"
                android:textSize="28sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/appLogo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            
            <TextView
                android:id="@+id/appSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/secure_messaging"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                app:layout_constraintTop_toBottomOf="@id/appTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            
            <!-- Status Text -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/appSubtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            
            <!-- Biometric Container -->
            <androidx.cardview.widget.CardView
                android:id="@+id/biometricContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                app:cardBackgroundColor="@color/dark_bg_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:layout_constraintTop_toBottomOf="@id/statusText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">
                    
                    <ImageView
                        android:id="@+id/biometricIcon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_fingerprint"
                        android:tint="@color/pink_500" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/touch_to_unlock"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/biometricButton"
                        style="@style/RoundedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/unlock_biometric"
                        android:paddingHorizontal="32dp" />
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        
                        <TextView
                            android:id="@+id/switchToPin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/use_pin"
                            android:textColor="@color/text_secondary"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true" />
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" | "
                            android:textColor="@color/text_muted" />
                        
                        <TextView
                            android:id="@+id/switchToPattern"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/use_pattern"
                            android:textColor="@color/text_secondary"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <!-- PIN Container -->
            <androidx.cardview.widget.CardView
                android:id="@+id/pinContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/dark_bg_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:layout_constraintTop_toBottomOf="@id/statusText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enter_pin"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/pinInputLayout"
                        style="@style/InputField"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/pink_500">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/pinInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberPassword"
                            android:maxLength="8"
                            android:gravity="center"
                            android:textSize="24sp"
                            android:letterSpacing="0.5"
                            android:textColor="@color/text_primary" />
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/submitPinButton"
                        style="@style/RoundedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/unlock"
                        android:paddingHorizontal="48dp" />
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        
                        <TextView
                            android:id="@+id/switchToBiometric"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/use_biometric"
                            android:textColor="@color/text_secondary"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true" />
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" | "
                            android:textColor="@color/text_muted" />
                        
                        <TextView
                            android:id="@+id/switchToPatternFromPin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/use_pattern"
                            android:textColor="@color/text_secondary"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <!-- Pattern Container -->
            <androidx.cardview.widget.CardView
                android:id="@+id/patternContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/dark_bg_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:layout_constraintTop_toBottomOf="@id/statusText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/draw_pattern"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />
                    
                    <com.andrognito.patternlockview.PatternLockView
                        android:id="@+id/patternLockView"
                        android:layout_width="280dp"
                        android:layout_height="280dp"
                        android:layout_marginTop="24dp"
                        app:normalStateColor="@color/text_muted"
                        app:correctStateColor="@color/success"
                        app:wrongStateColor="@color/error"
                        app:dotCount="3"
                        app:dotNormalSize="12dp"
                        app:dotSelectedSize="24dp"
                        app:pathWidth="4dp"
                        app:aspectRatioEnabled="true"
                        app:aspectRatio="square"
                        app:dotAnimationDuration="150"
                        app:pathEndAnimationDuration="100" />
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal">
                        
                        <TextView
                            android:id="@+id/switchToBiometricFromPattern"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/use_biometric"
                            android:textColor="@color/text_secondary"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true" />
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" | "
                            android:textColor="@color/text_muted" />
                        
                        <TextView
                            android:id="@+id/switchToPinFromPattern"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/use_pin"
                            android:textColor="@color/text_secondary"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>